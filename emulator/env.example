# Device Mock Configuration
MOCK_PORT=8080
MOCK_SERIAL_PORT=/dev/ttyUSB0
MOCK_TEST_MODE=false
MOCK_DEBUG=false
MOCK_BATTERY_LEVEL=100
MOCK_CHARGING=false

# Device ID (auto-generated if not set)
MOCK_DEVICE_ID=

# WebSocket Configuration
MOCK_WS_HEARTBEAT_INTERVAL=30000
MOCK_WS_RECONNECT_ATTEMPTS=5

# LED Configuration
MOCK_LED_DEFAULT_BRIGHTNESS=80
MOCK_LED_ANIMATION_SPEED=1000

# Button Configuration
MOCK_BUTTON_DEBOUNCE_TIME=200
MOCK_BUTTON_LONG_PRESS_TIME=2000
MOCK_BUTTON_DOUBLE_PRESS_TIME=500

# Battery Configuration
MOCK_BATTERY_REPORT_INTERVAL=300000
MOCK_BATTERY_DRAIN_RATE=0.1

# Logging Configuration
MOCK_LOG_LEVEL=info
MOCK_LOG_FILE=logs/emulator.log
