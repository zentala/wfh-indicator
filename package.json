{
  "name": "wfh-indicator-monorepo",
  "private": true,
  "packageManager": "yarn@4.4.1",
  "workspaces": [
    "domain",
    "emulator",
    "tray-app"
  ],
  "scripts": {
    "clean": "node scripts/clean.js",
    "build": "yarn workspaces foreach run build",
    "build:domain": "yarn workspace @wfh-indicator/domain build",
    "dev": "yarn electron-forge start --app-dir tray-app",
    "test:e2e": "yarn workspace tray-app test:e2e"
  },
  "devDependencies": {
    "electron-forge": "^5.2.4",
    "rimraf": "^6.0.1"
  }
}
